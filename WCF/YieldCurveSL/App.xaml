<Application xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             x:Class="YieldCurveSL.App"
             xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
             >
    <Application.Resources>

        <Style x:Key="CurrencyList" TargetType="ListBox">
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="Chart" TargetType="chartingToolkit:Chart">
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="PolylineStyle" TargetType="Polyline">
            <Setter Property="StrokeThickness" Value="2"/>
        </Style>

        <Style x:Key="ThumbNailPreview" TargetType="Image">
            <Setter Property="Margin" Value="7,7,5,5"/>
            <Setter Property="Height" Value="55"/>
        </Style>

        <Style x:Key="NameBlock" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="TextAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>


    </Application.Resources>
</Application>
